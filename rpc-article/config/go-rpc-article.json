{
  "http": {
    "port": 80
  },
  "grpc": {
    "port": 6080
  },
  "mysql": {
    "username": "root",
    "password": "",
    "database": "article",
    "host": "127.0.0.1",
    "port": 3306,
    "connMaxLifeTime": "60s",
    "maxIdleConns": 10,
    "maxOpenConns": 20
  },
  "elasticsearch": {
    "uri": "http://127.0.0.1:9200"
  },
  "service": {
    "elasticsearchIndex": "article"
  },
  "logger": {
    "grpc": {
      "level": "Info",
      "writers": [{
        "type": "RotateFile",
        "rotateFileWriter": {
          "filename": "log/article.rpc",
          "maxAge": "24h",
          "formatter": {
            "type": "Json"
          }
        }
      }]
    },
    "info": {
      "level": "Info",
      "writers": [{
        "type": "RotateFile",
        "rotateFileWriter": {
          "filename": "log/article.rpc",
          "maxAge": "24h",
          "formatter": {
            "type": "Json"
          }
        }
      }]
    }
  }
}